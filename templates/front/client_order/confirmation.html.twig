{% extends 'front/base.html.twig' %}

{% block title %}Confirmation de commande{% endblock %}

{% block body %}
    <h1>Confirmation de commande</h1>

    <div class="alert alert-success">
        Votre commande a été passée avec succès !
    </div>

    <h2>Détails de la commande</h2>
    <p>Numéro de commande : {{ order.orderNumber }}</p>
    <p>Date : {{ order.createdAt|date('d/m/Y H:i') }}</p>
    <p>Total : {{ order.totalAmount|number_format(2, ',', ' ') }} €</p>

    <h3>Articles commandés</h3>
    <ul>
    {% for item in order.items %}
        <li>{{ item.product.name }} - Quantité : {{ item.quantity }} - Prix : {{ item.price|number_format(2, ',', ' ') }} €</li>
    {% endfor %}
    </ul>

    <h3>Adresse de livraison</h3>
    <p>{{ order.shippingAddress }}</p>

    <h3>Adresse de facturation</h3>
    <p>{{ order.billingAddress }}</p>

    <a href="{{ path('front_home') }}" class="btn btn-primary">Retour à l'accueil</a>
{% endblock %}